# Maintainer: fzerorubigd <me@cyberrabbits.net>
_npmname=jison
pkgname=nodejs-jison # All lowercase
pkgver=0.3.12
pkgrel=1
pkgdesc="An API for creating parsers in JavaScript"
arch=(any)
url="https://github.com/zaach/jison"
license=(MIT)
depends=('nodejs')
optdepends=()
source=(http://registry.npmjs.org/$_npmname/-/$_npmname-$pkgver.tgz)
noextract=($_npmname-$pkgver.tgz)
sha1sums=('20dd448eebc2c569de25d0c13062f7e1a77335a2')
build() {
  cd $srcdir
  local _npmdir="$pkgdir/usr/lib/node_modules/"
  mkdir -p $_npmdir
  cd $_npmdir
  npm install -g --prefix "$pkgdir/usr" $_npmname@$pkgver
}
