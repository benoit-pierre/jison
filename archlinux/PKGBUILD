# Maintainer: fzerorubigd <me@cyberrabbits.net>
_npmname=jison
pkgname=nodejs-jison # All lowercase
pkgver=0.4.15
pkgrel=1
pkgdesc="An API for creating parsers in JavaScript"
arch=(any)
url="https://github.com/zaach/jison"
license=(MIT)
depends=('nodejs')
optdepends=()
source=(http://registry.npmjs.org/$_npmname/-/$_npmname-$pkgver.tgz)
noextract=($_npmname-$pkgver.tgz)
sha1sums=('6c6336c43e76b13c7ce29f96898c8bdf4e1e38fa')

package() {
  cd "${srcdir}/${pkgname}-${pkgver}"
  npm install --user root --global --prefix "${pkgdir}/usr" .
}

